{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "POSF Api",
      "description": "POSF Api for exchanging messages",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3030",
    "basePath": "/",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/xml"
    ],
    "produces": [
      "application/xml"
    ],
    "paths": {
      "/broker/postMessage": {
        "post": {
          "tags": [
            "Message"
          ],
          "description": "Post a new message in POSF",
          "parameters": [
            {
              "name": "message",
              "in": "body",
              "description": "Message we want to post",
              "schema": {
                "$ref": "#/definitions/Message"
              }
            }
          ],
          "summary": "Post a new message in POSF",
          "produces": [
            "application/xml"
          ],
          "responses": {
            "200": {
              "description": "New message posted"
            }
          }
        } 
      },
      "/broker/poolMessages/{consumerId}": {
        "parameters": [
            {
              "name": "consumerId",
              "in": "path",
              "required": false,
              "description": "Consumer ID if you use more than one reader",
              "type": "string"
            }
          ],
          "get": {
            "tags": [
              "Message"
            ],
            "summary": "Pool messages from POSF",
            "responses": {
              "200": {
                "description": "OK",
                "schema": {
                  "$ref": "#/definitions/Messages"
                }
              }
            }
          }
      }
    },
    "definitions": {
      "Message": {
          "type":"string"

      },

      "Messages": {
        "type": "array",
        "$ref": "#/definitions/Message"
      }
     
    }
  }